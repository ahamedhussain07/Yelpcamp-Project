<% layout('layouts/boilerPlate') %>
    <div class="row">
        <h2 class="text-center">Edit Campground</h2>
        <div class="col-6 offset-3">
            <form action="/campgrounds/<%= campgrounds._id%>?_method=PUT" method="POST" novalidate
                class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title </label>
                    <input class="form-control" type="text" id="title" name="campground[title]"
                        value="<%= campgrounds.title %>" required>
                        <div class="valid-feedback">that looks good</div>

                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]"
                        value="<%= campgrounds.location %>" required>
                        <div class="valid-feedback">that looks good</div>

                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url </label>
                    <input class="form-control" type="text" id="image" name="campground[image]"
                        value="<%= campgrounds.image%>" required>
                        <div class="valid-feedback">that looks good</div>

                </div>

                <div class="mb-3">
                    <label for="price">Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" id="price" class="form-control" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="campground[price]" value="<%= campgrounds.price %>"
                            required>
                            <div class="valid-feedback">that looks good</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]"
                        required><%= campgrounds.description %></textarea>
                        <div class="valid-feedback">that looks good</div>

                </div>

                <div class="mb-3">
                    <button class="btn btn-info">Update campground</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campgrounds._id %> ">Back To Campground</a>

        </div>
    </div>