<% layout('layouts/boilerPlate') %>

  <div class="row">
    <div class="col-6">
      <div class="card mb-3">
        <img src="<%= campgrounds.image %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">
            <%= campgrounds.title%>
          </h5>
          <p class="card-text">
            <%= campgrounds.description %>
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-muted">
            <%= campgrounds.location %>
          </li>
          <li class="list-group-item">$<%= campgrounds.price %>/night</li>
        </ul>
        <div class="card-body">
          <a class="card-link btn btn-info" href="/campgrounds/<%=campgrounds._id%>/edit ">Edit</a>
          <form class="d-inline" action="/campgrounds/<%= campgrounds._id%>?_method=DELETE" method="POST">
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
        <div class="card-footer text-muted text-center">
          2 days ago
        </div>
      </div>
      
    </div>
    <div class="col-6">
      <h2>Leave A Review</h2>
      <form class="mb-3 validated-form" action="/campgrounds/<%= campgrounds._id %>/reviews" method="POST" novalidate>
        <div class="mb-3">
          <label class="form-label" for="rating">Rating</label>
          <input class="form-range" type="range" name="review[rating]" id="rating" min="1" max="5">

        </div>
        <div class="mb-3">
          <label class="form-label" for="body">Review</label>
          <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
          <div class="valid-feedback">that looks good</div>
        </div>
        <button class="btn btn-success">Submit</button>
      </form>
      <% for(let review of campgrounds.reviews){ %>
        <div class="mb-3 card">
          <div class="card-body">
            <h5 class="card-title">Rating : <%= review.rating %>
            </h5>
            <p class="card-text">Rating : <%= review.body %>
            </p>
            <form action="/campgrounds/<%= campgrounds._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
              <button class="btn btn-sm btn-danger">Delete</button>
            </form>
          </div>
        </div>
        <% } %>
    </div>
  </div>
  </div>

